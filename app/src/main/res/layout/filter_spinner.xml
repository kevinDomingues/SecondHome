<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#D9D9D9">

  <TextView
    android:id="@+id/price"
    android:layout_marginTop="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/price"
    android:layout_marginLeft="50dp"
    android:layout_marginBottom="10dp"
    android:textSize="18sp"
    android:textColor="@color/lightGray"
    />

  <EditText
    android:id="@+id/minPrice"
    android:layout_below="@+id/price"
    android:layout_width="80dp"
    android:layout_height="40dp"
    android:hint="Min"
    android:gravity="center"
    android:layout_marginLeft="50dp"
    android:background="@drawable/rectangle_border"/>

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/price_value"
    android:layout_below="@+id/price"
    android:textSize="18sp"
    android:layout_marginTop="5dp"
    android:layout_centerHorizontal="true"
    />

  <EditText
    android:id="@+id/maxPrice"
    android:layout_below="@+id/price"
    android:layout_alignParentRight="true"
    android:layout_width="80dp"
    android:layout_height="40dp"
    android:hint="Max"
    android:gravity="center"
    android:layout_marginRight="50dp"
    android:background="@drawable/rectangle_border"/>

  <TextView
    android:id="@+id/periodOfTime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/lightGray"
    android:layout_below="@+id/minPrice"
    android:layout_marginLeft="50dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="10dp"
    android:text="@string/periodOfTime"
    android:textSize="18sp" />

  <EditText
    android:id="@+id/firstDate"
    android:layout_below="@+id/periodOfTime"
    android:layout_width="120dp"
    android:layout_height="40dp"
    android:hint="@string/date"
    android:gravity="center"
    android:layout_marginLeft="50dp"
    android:textSize="14sp"
    android:background="@drawable/rectangle_border"/>

  <Button
    android:id="@+id/firstDate1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="110dp"
    android:layout_below="@+id/periodOfTime"
    android:drawableTop="@drawable/ic_baseline_calendar_today_24"
    android:background="@android:color/transparent" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/price_value"
    android:layout_below="@+id/periodOfTime"
    android:textSize="18sp"
    android:layout_marginTop="5dp"
    android:layout_centerHorizontal="true"
    />

  <EditText
    android:id="@+id/lastDate"
    android:layout_below="@+id/periodOfTime"
    android:layout_alignParentRight="true"
    android:layout_width="120dp"
    android:layout_height="40dp"
    android:hint="@string/date"
    android:textSize="14sp"
    android:gravity="center"
    android:layout_marginRight="50dp"
    android:background="@drawable/rectangle_border"/>

  <Button
    android:id="@+id/lastDate1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_marginRight="20dp"
    android:layout_below="@+id/periodOfTime"
    android:drawableTop="@drawable/ic_baseline_calendar_today_24"
    android:background="@android:color/transparent" />

  <TextView
    android:id="@+id/habitation"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/housing"
    android:layout_below="@+id/firstDate"
    android:textSize="18sp"
    android:layout_marginLeft="50dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="10dp"
    android:textColor="@color/lightGray"
    />

  <CheckBox
    android:id="@+id/room"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="@string/room"
    android:layout_below="@+id/habitation"
    android:button="@null"
    android:textSize="16sp"
    android:textColor="@color/lightGray"
    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
    android:layout_marginLeft="25dp"
  />

  <CheckBox
  android:id="@+id/apartment"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_gravity="center"
  android:text="@string/apartment"
  android:layout_below="@+id/habitation"
  android:button="@null"
  android:textSize="16sp"
  android:textColor="@color/lightGray"
  android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
android:layout_centerHorizontal="true"  />

  <CheckBox
    android:id="@+id/house"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="@string/house"
    android:layout_below="@+id/habitation"
    android:button="@null"
    android:textSize="16sp"
    android:textColor="@color/lightGray"
    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
    android:layout_alignParentRight="true"
    android:layout_marginRight="25dp"
  />

  <CheckBox
    android:id="@+id/insertAddMobility"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="@string/mobility"
    android:layout_below="@+id/room"
    android:button="@null"
    android:textSize="16sp"
    android:textColor="@color/lightGray"
    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
    android:layout_marginLeft="50dp"
  />
</RelativeLayout>
