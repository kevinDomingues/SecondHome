<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/darkwhite"
  tools:context=".Profile">

  <RelativeLayout
    android:layout_width="300dp"
    android:layout_height="700dp"
    android:layout_centerInParent="true">

  <ImageView
    android:layout_marginTop="20dp"
    android:id="@+id/backArrow"
    android:layout_width="54dp"
    android:layout_height="58dp"
    android:layout_marginLeft="20dp"
    android:src="@drawable/ic_baseline_arrow_back_24"/>

  <TextView
    android:id="@+id/tituloPerfil"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="90dp"
    android:layout_marginTop="25dp"
    android:text="@string/perfil_titulo"
    android:textSize="31sp"
    android:textStyle="bold" />

  <RelativeLayout
    android:id="@+id/caixa"
    android:layout_width="300dp"
    android:layout_height="450dp"
    android:layout_centerInParent="true"
    android:background="@drawable/rectangle_border">

    <ImageView
      android:id="@+id/profile"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="5dp"
      android:src="@drawable/ic_baseline_person_bigger" />

    <EditText
      android:id="@+id/username"
      android:layout_width="270dp"
      android:layout_height="40dp"
      android:layout_below="@+id/profile"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="25dp"
      android:backgroundTint="#D9D9D9"
      android:gravity="center"
      android:textColor="@color/black"
      android:textSize="18sp"
      />

    <EditText
      android:id="@+id/name"
      android:layout_width="270dp"
      android:layout_height="40dp"
      android:layout_below="@+id/username"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="25dp"
      android:backgroundTint="#D9D9D9"
      android:gravity="center"
      android:textColor="@color/black"
      android:textSize="18sp" />

    <EditText
      android:id="@+id/email"
      android:layout_width="270dp"
      android:layout_height="40dp"
      android:layout_below="@+id/name"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="25dp"
      android:backgroundTint="#D9D9D9"
      android:gravity="center"
      android:textColor="@color/black"
      android:textSize="18sp" />

    <EditText
      android:id="@+id/contact"
      android:layout_width="270dp"
      android:layout_height="40dp"
      android:layout_below="@+id/email"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="25dp"
      android:backgroundTint="#D9D9D9"
      android:gravity="center"
      android:textColor="@color/black"
      android:textSize="18sp" />

    <EditText
      android:id="@+id/birthdayDate"
      android:layout_width="270dp"
      android:layout_height="40dp"
      android:layout_below="@+id/contact"
      android:layout_centerHorizontal="true"
      android:backgroundTint="#D9D9D9"
      android:gravity="center"
      android:textColor="@color/black"
      android:textSize="18sp" />
  </RelativeLayout>

  <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/editarConta"
    android:layout_width="280dp"
    android:layout_height="45dp"
    android:layout_below="@+id/caixa"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:background="@drawable/rectangle_border"
    android:backgroundTint="@color/orangeTheme"
    android:hint="@string/editar"
    android:textColorHint="@color/white"
    android:textSize="20sp"
    tools:ignore="TouchTargetSizeCheck" />

  </RelativeLayout>
</RelativeLayout>
