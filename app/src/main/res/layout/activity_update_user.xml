<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="700dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/topTitleUpd"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/backArrowUpd"
                android:layout_width="54dp"
                android:layout_height="58dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-10dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/ic_baseline_arrow_back_24"
                android:drawableTint="#545454" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/update"
                android:textSize="31sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/topTitleUpd"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/email_inputUpd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#CDCDCD"
                    android:hint="Email"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:textColorHint="#CDCDCD" />

                <EditText
                    android:id="@+id/tlm_inputUpd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email_inputUpd"
                    android:backgroundTint="#CDCDCD"
                    android:hint="@string/contact"
                    android:inputType="number"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:textColorHint="#CDCDCD" />

                <EditText
                    android:id="@+id/name_inputUpd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tlm_inputUpd"
                    android:backgroundTint="#CDCDCD"
                    android:hint="@string/name"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:textColorHint="#CDCDCD" />

                <EditText
                    android:id="@+id/user_inputUpd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name_inputUpd"
                    android:backgroundTint="#CDCDCD"
                    android:hint="@string/user"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:textColorHint="#CDCDCD" />

                <EditText
                    android:id="@+id/birthdayDateUpd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_inputUpd"
                    android:layout_alignRight="@+id/birthdayButtonUpd"
                    android:backgroundTint="#CDCDCD"
                    android:hint="@string/birthdayDate"
                    android:inputType="none"
                    android:padding="20dp"
                    android:textAlignment="center"
                    android:textColorHint="#CDCDCD" />

                <Button
                    android:id="@+id/birthdayButtonUpd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_inputUpd"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/ic_baseline_calendar_today_24" />


                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/birthdayButtonUpd"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="101dp"
                    android:layout_marginEnd="21dp"
                    android:backgroundTint="#FF8D69"
                    android:text="@string/update" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnUpdate"
                    android:layout_centerHorizontal="true">

                    <!--                    <TextView-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:text="@string/alreadyRegisteredQuestion"-->
                    <!--                        android:textColor="@color/lightGray" />-->


                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>