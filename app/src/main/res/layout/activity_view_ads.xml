<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewAds">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/viewAdsIv"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="30dp"
                android:src="@drawable/ic_main_logo"
                />

            <RelativeLayout
                android:layout_below="@+id/viewAdsIv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:backgroundTint="@color/darkwhite"
                android:paddingHorizontal="15dp"
                >

                <TextView
                    android:id="@+id/viewAdsAdName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="20dp"
                    android:text="AdName"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <LinearLayout
                    android:id="@+id/viewAdsTypell"
                    android:layout_below="@+id/viewAdsAdName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/viewAdsType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:padding="20dp"
                        android:text="type"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/viewAdsViewLocationPrice"
                    android:layout_below="@+id/viewAdsTypell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/viewAdsLocation"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:padding="20dp"
                        android:text="location"
                        />

                    <TextView
                        android:id="@+id/viewAdsPrice"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:padding="20dp"
                        android:text="price"
                        android:textAlignment="textEnd"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/viewAdsSpecs"
                    android:layout_below="@+id/viewAdsViewLocationPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:gravity="center"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/viewAdsNumberRooms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="5"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_baseline_bed_24"
                            />

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:id="@+id/viewAdsNumberBathrooms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="5"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_baseline_bathtub_24"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        >

                        <ImageView
                            android:id="@+id/viewAdsAccessibility"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_baseline_accessible_24"
                            />

                        <ImageView
                            android:id="@+id/viewAdsWifi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_baseline_wifi_24"
                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/viewAdsAreall"
                    android:layout_below="@+id/viewAdsSpecs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    >

                    <TextView
                        android:id="@+id/viewAdsArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="area"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_below="@+id/viewAdsAreall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    >

                    <TextView
                        android:id="@+id/viewAdsContacts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="contacts"
                        />

                </LinearLayout>

                <Button
                    android:id="@+id/viewAdsOnMap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewAdsAreall"
                    android:layout_marginTop="100dp"
                    android:text="View on Map"
                    android:layout_marginBottom="100dp"/>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>
</LinearLayout>